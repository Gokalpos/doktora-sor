<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfilActivity"
    android:background="@drawable/profil_arka_plan">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profil_resmi_ziyaret"
        android:layout_width="210dp"
        android:layout_height="210dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="230dp"
        android:src="@drawable/profil"/>

    <TextView
        android:id="@+id/kullanici_adı_ziyaret"
        android:layout_width="366dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/profil_resmi_ziyaret"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="Kullanıcı Adı"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/kullanici_profil_durumu_ziyaret"
        android:layout_width="381dp"
        android:layout_height="34dp"
        android:layout_below="@id/kullanici_adı_ziyaret"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"
        android:text="Kullanıcı Durumu"
        android:textAlignment="center"
        android:textSize="18sp" />

    <Button
        android:id="@+id/mesaj_gonderme_talebi_butonu"
        android:text="Soru Sor"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/kullanici_profil_durumu_ziyaret"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textAllCaps="false" />





</RelativeLayout>